<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fee Calculation</title>
    <style>
        /* CSS for fee payment form */
        * {
            padding: 0;
            margin: 0;
        }

        .container {
            width: 70vw;
            max-width: 500px;
            /* Increase max-width */
            margin: 120px auto;
            padding: 30px;
            /* Increase padding */
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #0361c7;
        }

        .container form {
            display: grid;
            grid-gap: 20px;
        }

        .container label {
            font-weight: bold;
        }

        .container select,
        .container input[type="number"] {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }


        header {
            background-color: #293861;
            color: #fff;
            padding: 15px;
            text-align: center;
            width: 100%;
            position: fixed;
            top: 0;
            z-index: 1000;
            height: 30px;

        }

        .container input[type="submit"] {
            background-color: #0361c7;
            color: white;
            padding: 10px 20px;
            /* Adjust padding for button */
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        /* .container input[type="submit"]:hover {
            background-color: #0056b3;
        } */
        .txtfld {
            height: 30px;
        }

        .hidden {
            display: none;
        }

        #button {
            width: 150px;
            padding: 15px;
            background-color: #0361c7;
            color: #fff;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            margin: 0px 10px;
        }

        #button:hover {
            background-color: #293861;
        }
    </style>
</head>

<body>
    <header>
        <h2></h2>
    </header>
    <div class="container">
        <h2><u>Fee Calculation</u></h2>
        <p><b>Roll Number: <%= rollNo %></b></p>
        <form action="/savefee" method="POST">
            <input type="hidden" name="rollNo" value="<%= rollNo %>">
            <input type="hidden" name="totalfee" placeholder="Total Fee" required>
            <input type="hidden" name="balance" value="0">



            <div id="pcmInput">
                <label for="sgpa">PCM/SGPA</label>
                <input type="number" id="sgpa" name="sgpa" step="0.01" required>
            </div>


            <select id="semester" name="semester" onchange="toggleInputField()" required>
                <option value=1>Semester 1</option>
                <option value="2">Semester 2</option>
                <option value="3">Semester 3</option>
                <option value="4">Semester 4</option>
                <option value="5">Semester 5</option>
                <option value="6">Semester 6</option>
                <option value="7">Semester 7</option>
                <option value="8">Semester 8</option>
            </select>

            <input type="hidden" name="read" value="false">
            <input type="hidden" name="status" value="false">
            <input type="hidden" name="branch">
            <input type="hidden" name="name">
            <button  value="pay" name="pay" class="hidden pay-button">Pay</button>

            <div id="textField" class="hidden">
                <label for="textfield">Enter the link of Result pdf </label>
                <input type="text" name="textfield" class="txtfld"
                    placeholder="Eg: https://app.ktu.edu.in/eu/pub/attachments........">
            </div>

            <button type="submit" id="button">Submit</button>
        </form>
    </div>

    <script>
        function toggleInputField() {
            var semesterSelect = document.getElementById("semester");
            var textField = document.getElementById("textField");

            if (semesterSelect.value === "1") {
                textField.classList.add("hidden");
            } else {
                textField.classList.remove("hidden");
            }
        }
    </script>

</body>

</html>